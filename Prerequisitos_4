numeros = {0:'cero', 1:'uno', 2:'dos', 3:'tres', 4:'cuatro', 5:'cinco',
           6:'seis', 7:'siete', 8:'ocho', 9:'nueve', 10:'diez'}

for num in numeros:
    print(num)

for key, val in numeros.items():
    print(key, val)

for key in numeros.keys():
    print(key)

for val in numeros.values():
    print(val)


